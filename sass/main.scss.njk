// Misc.
$misc: (
    z-index-base:		10000
);

// Duration.
$duration: (
    nav:				0.5s,
    transition:			0.2s
);

// Size.
$size: (
    navPanel-width:		20em,
    border-radius:		5px,
    border-width:		1px,
    element-height:		2.75em,
    element-margin:		2em,
    inner-width:		(
        default:		70em,
        large:			100%
    )
);

// Font.
$font: (
    family:				('Open Sans', Helvetica, sans-serif),
    family-fixed:		('Courier New', monospace),
    weight:				300,
    weight-bold:		700
);

// Palette.
{% set palette = site.params.palettes[site.params.palette].sass %}
$palette: (
    bg:					#fff,
    fg:					#5e6875,
    fg-bold:			#4d5968,
    fg-light:			#7e8895,
    border:				rgba(144,144,144,0.25),
    border-bg:			rgba(144,144,144,0.075),
    border2:			rgba(144,144,144,0.5),
    border2-bg:			rgba(144,144,144,0.2),
    highlight:			accent1,
    gradient1:			{{ palette.gradient1 }},
    gradient2:			{{ palette.gradient2 }},

    accent1: (
        bg:				{{ palette.accent1 }},
        fg:				mix({{ palette.accent1 }}, #ffffff, 25%),
        fg-bold:		#ffffff,
        fg-light:		mix({{ palette.accent1 }}, #ffffff, 40%),
        border:			rgba(255,255,255,0.25),
        border-bg:		rgba(255,255,255,0.075),
        border2:		rgba(255,255,255,0.5),
        border2-bg:		rgba(255,255,255,0.2),
        highlight:		accent1
    ),

    accent2: (
        bg:				{{ palette.accent2 }},
        fg:				mix({{ palette.accent2 }}, #ffffff, 25%),
        fg-bold:		#ffffff,
        fg-light:		mix({{ palette.accent2 }}, #ffffff, 40%),
        border:			rgba(255,255,255,0.25),
        border-bg:		rgba(255,255,255,0.075),
        border2:		rgba(255,255,255,0.5),
        border2-bg:		rgba(255,255,255,0.2),
        highlight:		accent2
    ),

    accent3: (
        bg:				{{ palette.accent3 }},
        fg:				mix({{ palette.accent3 }}, #ffffff, 25%),
        fg-bold:		#ffffff,
        fg-light:		mix({{ palette.accent3 }}, #ffffff, 40%),
        border:			rgba(255,255,255,0.25),
        border-bg:		rgba(255,255,255,0.075),
        border2:		rgba(255,255,255,0.5),
        border2-bg:		rgba(255,255,255,0.2),
        highlight:		accent3
    ),

    accent4: (
        bg:				rgba(21,27,33,0.6),
        bg-alt:			#2F373F,
        fg:				#ffffff,
        fg-bold:		#ffffff,
        fg-light:		#ffffff,
        border:			#ffffff,
        border-bg:		rgba(255,255,255,0.075),
        border2:		#ffffff,
        border2-bg:		rgba(255,255,255,0.2),
        highlight:		accent4
    )
);
